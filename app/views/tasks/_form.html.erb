<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :task_name %>
    <%= form.text_field :task_name, id: "task" %>
  </div>

  <div class="field">
    <%= form.label :task_details %>
    <%= form.text_area :task_details %>
  </div>

   <div class="field">
    <%= form.label :priority %>
    <%= form.select :priority, options_for_select([[''],['High'], ['Medium'], ['Low']]), id: "priority" %>
  </div>

   <div class="field">
    <%= form.label :status %>
    <%= form.select :status, options_for_select([[''],['Unstarted'], ['In progress'], ['Completed']]), id: "status" %>
  </div>

   <div class="field">
    <%= form.label :deadline %>
    <%= form.date_select :deadline, id: "deadline" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

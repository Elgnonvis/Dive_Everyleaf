<p id="notice"><%= notice %></p>
<h1>Tasks list</h1>
<nav>
<%= form_with url: tasks_path, method: :get, local: true do |form| %>
  <%= form.label :task_name, "Task name:" %>
  <%= form.text_field :task_name %>
  <%= form.label :status, "Status" %>
  <%= form.select :status, options_for_select([[''],['Unstarted'], ['In progress'], ['Completed']])%>
  <%= form.submit "Search" %>
<% end %>
</nav>
<p>
  <%= link_to "sort by end deadline", tasks_path(sort_expired: "true") , value: "dater" %>
  <%= link_to "sort by priority", tasks_path(sort_priority: "true") %>
  </p>

<table>
   <thead>
    <tr>
      <th>Task name </th>
      <th>Description </th>
      <th>Priority </th>
      <th>Status </th>
      <th>Deadline </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="task_row" ><%= task.task_name %></td>
        <td><%= truncate(task.task_details, length: 100) %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td class="deadline_row" ><%= task.deadline %></td>
        <td><%= link_to 'Show more', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>

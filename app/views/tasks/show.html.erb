<p id="notice"><%= notice %></p>

<div class=" container-fluid d-flex flex-column justify-content-center w-50  ">
  <p>
    <strong>Name: </strong>
    <%= @task.task_name %>
  </p>

  <p>
    <strong>Details: </strong>
    <%= @task.task_details %>
  </p>
  <p>
    <strong>Priority: </strong>
    <%= @task.priority %>
  </p>
  <p>
    <strong>Status: </strong>
    <%= @task.status %>
  </p>
  <p>
    <strong>Deadline: </strong>
    <%= @task.deadline %>
  </p>
  <a href = "<%= edit_task_path(@task) %>" class="btn btn-warning">Edit</a> <br>
  <a href = "<%= tasks_path %>" class="btn btn-success">Back</a>  
</div>
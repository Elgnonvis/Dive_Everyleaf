<%= render "partials/adminusersindex" %>
<div class="w-50 d-flex flex-column container justify-content-center align-itmes-center" style = "padding-top: 1rem; border: 1px solid;">

  <h1 class ="d-flex flex-column container justify-content-center align-itmes-center">CEditing user account</h1>

  <%= form_with(model: [:admin, @user], local: true, html: {class:'form-horizontal'}) do |f| %>
    <%= render "partials/userserrorsany", user: @user %>
    <div class="form-group mt-1">
      <%= f.text_field :lastname, placeholder: 'Last Name', class: 'form-control' %>
    </div> <br>
    <div class="form-group">
      <%= f.text_field :firstname, placeholder: 'Fist name', class: 'form-control' %>
    </div> <br>
    <div class="form-group">
      <%= f.email_field :email, placeholder: 'E-mail', class: 'form-control' %>
    </div> <br>

    <div class="form-group">
      <%= f.password_field :password, placeholder: 'Password here', class: 'form-control' %>
    </div><br>
    <div class="form-check">
      <%= f.label :admin, 'Admin' %>
      <%= f.hidden_field :admin, value: false %>
      <%= f.check_box :admin %>
    </div>
    <div class="actions mt-1">
      <button class="btn btn-success w-100" type="submit">Update an account </button>
      </div>
  <% end %>
  <a href = "<%= admin_users_path  %>" class="btn btn-dark w-100">Back</a> <br> <br>
</div>
<p id="notice"><%= notice %></p>
<div class="d-flex flex-row justify-content-center align-items-center container">
    <div class="">
    <h1>Account details</h1>
  <p>
    <strong>Firstname: </strong>
    <%= @user.firstname%>
  </p>

  <p>
    <strong>Lastname:</strong>
    <%= @user.lastname %>
  </p>

  <p>
    <strong>email:</strong>
    <%= @user.email %>
  </p>
  </div>
</div>

<div class="row">
    <div class ='table-responsive mb-4'>
        <table class = "table table-striped table-hover border" >
          <thead>
            <tr>
              <th>Task name </th>
              <th>Description </th>
              <th>Priority </th>
              <th>Status </th>
              <th>Deadline </th>
              <th>Actions </th>
            </tr>
          </thead>
    
          <tbody>
            <% @user.tasks.each do |task| %>
              <tr>
                <td class="task_row" ><%= task.task_name %></td>
                <td><%= truncate(task.task_details, length: 50) %></td>
                <td><%= task.priority %></td>
                <td><%= task.status %></td>
                <td class="deadline_row" ><%= task.deadline %></td>
                <td>
                  <a href = "<%= task_path(task.id) %>" class="btn btn-primary">Show</a>
                  <a href = "<%= edit_task_path(task.id) %>" class="btn btn-warning">Edit</a>
                  <a href = "<%= task_path(task.id) %>" class="btn btn-danger", data-confirm="Are you sure?" data-method="DELETE">Destroy</a>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>    
</div>
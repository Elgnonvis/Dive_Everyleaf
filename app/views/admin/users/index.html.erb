<%= render "partials/adminusersindex" %>
<div class="container text-center">
    <h1>Users Management's Page</h1> <br>

    <div>
        <table class="table table-striped w-100 text-left">
            <thead class="thead-dark">
                <th scope="col">NÂ°</th>
                <th>Identity</th>
                <th>Email</th>
                <th>Tasks</th>
                <th>Role</th>
                <th> Actions </th>
            </thead>
            <tbody>
                <% @users.each do |user| %>
                    <tr>
                        <td> <%=user.id%> </td>
                        <td> <%=user.firstname + " " + user.lastname.upcase %> </td>
                        <td class="user-name"> <%=user.email%> </td>
                        <td> <%=user.tasks.count%> </td> 
                        <td>
                            <% if user.admin %>
                                <h5> <span class="badge">Admin</span></h5>
                            <% end%>
                        </td>
                        <td>
                            <a href = "<%= admin_user_path(user.id) %>" class="btn btn-sm btn-outline-success">Show</a>
                            <a href = "<%= edit_admin_user_path(user.id) %>" class="btn btn-sm btn-outline-warning">Edit</a>
                            <a href = "<%= admin_user_path(user.id) %>" class="btn btn-sm btn-outline-danger delete", data-confirm="Are you sure?" data-method="DELETE">Destroy</a>
                        </td>                      
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
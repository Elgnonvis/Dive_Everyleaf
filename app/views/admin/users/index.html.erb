<%= render "partials/adminusersindex" %>
<div class="container text-center mt-3">
    <h1>User list</h1> <br>

    <div>
        <table class="table table-striped w-100 text-left">
            <thead class="thead-dark">
                <th>NÂ°</th>
                <th>Identity</th>
                <th>Email</th>
                <th>Tasks</th>
                <th>Role</th>
                <th> Actions </th>
            </thead>
            <tbody>
                <% @users.each do |user| %>
                    <tr>
                        <td> <%=user.id%> </td>
                        <td> <%=user.id%> </td>
                        <td class="user-name"> <%=user.email%> </td>
                        <td> <%=user.tasks.count%> </td> 
                        

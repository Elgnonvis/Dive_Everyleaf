                            <td><%= link_to 'Remove admin', class:"btn btn-sm btn-outline-success" %></td>
                        <% else %>
                            <td><%= link_to 'Add to admin', class:"btn btn-sm btn-outline-success" %></td>
                        <% end %> 
                        <td>
                            <a href = "<%= admin_user_path(user.id) %>" class="btn btn-sm btn-outline-success">Show</a>
                            <a href = "<%= edit_admin_user_path(user.id) %>" class="btn btn-sm btn-outline-warning">Edit</a>
                            <a href = "<%= admin_user_path(user.id) %>" class="btn btn-sm btn-outline-danger delete", data-confirm="Are you sure?" data-method="DELETE">Destroy</a>
                        </td>                      
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
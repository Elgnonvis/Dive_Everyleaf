<div class="w-50 d-flex flex-column container justify-content-center align-itmes-center" style = "padding-top: 1rem; border: 1px solid;">
 <h1 class ="d-flex flex-column justify-content-around align-itmes-center ml-5">Sign up</h1> <br>

  <%= form_with(model: @user, local: true, html: {class:'form-horizontal'}) do |f| %>
    <%= render "partials/userserrorsany" %>

    <div class="form-group">
      <%= f.label :username, "Username" %>
      <%= f.text_field :username, placeholder: 'Your Username', class:"form-control" %> 
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: 'E-mail', class: 'form-control' %>
    </div>

    <div class="form-group">
    <%= f.label :password %>
      <%= f.password_field :password, placeholder: 'Password here', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, placeholder: 'Confirmation of password', class: 'form-control' %>
    </div>
    <div class="actions">
      <button class="btn btn-success w-100" type="submit">Create an account </button>
      </div>
  <% end %>
</div>
<div class=" mt-2 w-50 d-flex flex-column container justify-content-center align-itmes-center" style = "padding-top: 1rem; border: 1px solid;">
    <p class ="ml-5"><strong>Have an account? </strong><a class="text-decoration-none m-5" href="<%= new_session_path %>">Sign in now</a></p>
</div>
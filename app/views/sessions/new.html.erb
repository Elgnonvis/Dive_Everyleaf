<div class="w-50 d-flex flex-column container justify-content-center align-itmes-center" style = "padding-top: 1rem; border: 1px solid;">
    <h1 class ="d-flex flex-column container justify-content-center align-itmes-center">Sign in and see your tasks </h1> <br>
    <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>        
        
        <div class = "form-group">
            <%=f.label :email %>
            <%= f.email_field :email, placeholder: "Email", class: 'form-control' %>
        </div>

        <div class = "form-group">
            <%=f.label :password %>
            <%= f.password_field :password, placeholder: 'Your password', class: 'form-control' %>
        </div>

        <div class = "form-group">
            <button class="btn btn-success w-100" type="submit">Sign in </button>
        </div>
    <% end %>
</div>
<div class=" mt-2 w-50 d-flex flex-column container justify-content-center align-itmes-center" style = "padding-top: 1rem; border: 1px solid;">
    <p class ="ml-5"><strong>New around here?</strong><a class="text-decoration-none m-5" href="<%= new_user_path %>">Sign up now</a></p>
</div>